{
  "theme": {
    "name": "Chief of Staff Light",
    "colors": {
      "background": {
        "primary": "#f5f5f7",
        "secondary": "#ffffff",
        "tertiary": "#e5e5e7"
      },
      "surface": {
        "default": "#ffffff",
        "hover": "#f0f0f2",
        "active": "#e0e0e3"
      },
      "text": {
        "primary": "#1d1d1f",
        "secondary": "#515154",
        "muted": "#86868b",
        "disabled": "#c7c7cc"
      },
      "border": {
        "default": "#d2d2d7",
        "hover": "#a1a1a6",
        "focus": "#1d4ed8"
      },
      "brand": {
        "primary": "#1e3a8a",
        "hover": "#1d4ed8",
        "active": "#1e40af"
      },
      "status": {
        "success": "#059669",
        "successBg": "rgba(5, 150, 105, 0.1)",
        "warning": "#d97706",
        "warningBg": "rgba(217, 119, 6, 0.1)",
        "error": "#dc2626",
        "errorBg": "rgba(220, 38, 38, 0.1)",
        "info": "#2563eb",
        "infoBg": "rgba(37, 99, 235, 0.1)"
      },
      "link": {
        "primary": "#1d4ed8",
        "hover": "#2563eb",
        "visited": "#7c3aed",
        "underlineColor": "#1d4ed8"
      }
    },
    "typography": {
      "fontFamily": "'Aptos', 'Segoe UI', 'Calibri', 'Arial', sans-serif",
      "fontDisplay": "'Hack', 'Monaco', 'Consolas', 'Courier New', monospace",
      "fontMono": "'Hack', 'SF Mono', 'Monaco', 'Consolas', monospace",
      "fontSize": {
        "xs": "0.7rem",
        "sm": "0.875rem",
        "base": "1.125rem",
        "lg": "1.25rem",
        "xl": "1.5rem",
        "2xl": "1.75rem",
        "3xl": "2.0rem"
      },
      "fontWeight": {
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "lineHeight": {
        "tight": 1.25,
        "base": 1.5,
        "relaxed": 1.625
      }
    },
    "spacing": {
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem"
    },
    "borderRadius": {
      "sm": "0.375rem",
      "base": "0.5rem",
      "md": "0.625rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "2xl": "1.5rem",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
    },
    "transitions": {
      "fast": "150ms",
      "base": "200ms",
      "slow": "300ms",
      "ease": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "layout": {
    "sidebar": {
      "width": "72px"
    },
    "chatbox": {
      "width": "400px"
    },
    "container": {
      "maxWidth": "1200px"
    }
  },
  "components": {
    "button": {
      "padding": {
        "small": "0.5rem 0.75rem",
        "medium": "0.75rem 1rem",
        "large": "1rem 1.5rem"
      }
    },
    "input": {
      "padding": "0.75rem 1rem"
    },
    "card": {
      "padding": "1.5rem"
    }
  }
}